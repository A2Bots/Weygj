{
  "name": "islam-bot",
  "version": "1.0.7",
  "homepage": "https://github.com/rn0x",
  "description": "islam-bot - publishes adhkar and the Qur’an ..",
  "main": "index.js",
  "type": "commonjs",
  "author": {
    "name": "Ryan Almalki",
    "email": "rn0xx711@gmail.com",
    "url": "https://github.com/rn0x"
  },
  "license": "MIT",
  "scripts": {
    "packwin": "electron-builder --windows",
    "packlinux": "electron-builder --linux",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dev": "nodemon --exec electron ."
  },
  "devDependencies": {
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "fs-extra": "^10.0.1",
    "moment": "^2.29.1",
    "path": "^0.12.7",
    "telegraf": "^4.7.0"
  },
  "build": {
    "productName": "islam-bot",
    "appId": "org.IslamBot.rn0x",
    "copyright": "Copyright © 2022 islam-bot",
    "extraFiles": [
      {
        "from": "./",
        "to": "resources",
        "filter": [
          "!dist",
          "!node_modules"
        ]
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "signingHashAlgorithms": [
        "sha256",
        "sha1"
      ],
      "signAndEditExecutable": true,
      "publisherName": "Ryan Almalki",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable"
        },
        {
          "target": "msi"
        }
      ]
    },
    "nsis": {
      "oneClick": "false",
      "perMachine": true,
      "allowToChangeInstallationDirectory": "true",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": "build/LICENSE.txt",
      "shortcutName": "islam-bot",
      "uninstallDisplayName": "islam-bot",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/installerSidebar.bmp",
      "installerHeader": "build/installerHeader.bmp"
    },
    "linux": {
      "category": "Education",
      "icon": "build/icons/icon.icns",
      "vendor": "Ryan Almalki",
      "description": "islam-bot - publishes adhkar and the Qur’an ..",
      "synopsis": "publishes adhkar and the Qur’an",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ]
    },
    "directories": {
      "buildResources": "resources"
    }
  }
}
